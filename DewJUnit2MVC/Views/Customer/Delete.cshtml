@model Customer
@{
    ViewBag.Title = "Delete Account";
}
<!DOCTYPE html>
@* this is a deletion confirmation page *@
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body>
    <h1>Are you sure you want to delete this account?</h1>
    <h2>@Model.Name (@Model.Username)</h2>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CustID" />

        @* delete button and return to index link *@
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go Back</a>
    </form>
</body>
</html>